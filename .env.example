# PocketBase Configuration
POCKETBASE_URL=http://127.0.0.1:8090

# PocketBase Admin Credentials
# Required for PocketBase schema synchronization during deployment
# NOTE: Taskfile uses these default values for local development (admin@test.local / testpassword123)
POCKETBASE_ADMIN_EMAIL=admin@test.local
POCKETBASE_ADMIN_PASSWORD=testpassword123

# Redis Configuration (for caching leaderboards and analytics)
REDIS_URL=redis://localhost:6379

# OpenRouter API Key for LLM access
# REQUIRED: Get your key from https://openrouter.ai
# You'll need to add credits (~$5 minimum recommended)
OPENROUTER_API_KEY=sk-or-v1-...

# WAHA Configuration
WAHA_BASE_URL=http://waha:3000
# Optional: API Key if WAHA is protected
WAHA_API_KEY=your_waha_api_key
# Optional: Webhook Secret for authentication (must match X-Webhook-Secret header)
WAHA_WEBHOOK_SECRET=your_secret_webhook_token

# Pydantic Logfire Token
LOGFIRE_TOKEN=your_logfire_token_here

# House Onboarding Credentials
HOUSE_NAME=MyHouse
HOUSE_CODE=HOUSE123
HOUSE_PASSWORD=SecretPass

# AI Model Configuration (defaults to Claude 3.5 Sonnet)
MODEL_ID=anthropic/claude-3.5-sonnet

# Admin Notification Configuration
# Enable/disable admin notifications for critical errors
ENABLE_ADMIN_NOTIFICATIONS=true
# Cooldown period between notifications for the same error category (in minutes)
ADMIN_NOTIFICATION_COOLDOWN_MINUTES=60
