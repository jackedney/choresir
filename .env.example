# PocketBase Configuration
POCKETBASE_URL=http://127.0.0.1:8090

# PocketBase Admin Credentials
# Required for PocketBase schema synchronization during deployment
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=your_admin_password_here

# Redis Configuration (for caching leaderboards and analytics)
REDIS_URL=redis://localhost:6379

# OpenRouter API Key for LLM access
# REQUIRED: Get your key from https://openrouter.ai
# You'll need to add credits (~$5 minimum recommended)
OPENROUTER_API_KEY=sk-or-v1-...

# WAHA Configuration
WAHA_BASE_URL=http://localhost:3000
WAHA_API_KEY=your_waha_api_key_here
# Webhook URL where WAHA sends incoming messages (used by docker-compose)
# For local dev with Docker: http://host.docker.internal:8001/webhook
# For production: https://your-domain.com/webhook
WHATSAPP_HOOK_URL=http://host.docker.internal:8001/webhook

# Pydantic Logfire Token
LOGFIRE_TOKEN=your_logfire_token_here

# Web Admin Interface Configuration
# Required for accessing the /admin web interface
ADMIN_PASSWORD=changeme
# Secret key for session signing (generate a random string in production)
SECRET_KEY=your-secret-key-here

# House Onboarding Configuration
# Optional: These values are used as fallback if house_config collection is empty
# Admin can configure house settings via /admin/house web interface
HOUSE_NAME=MyHouse
HOUSE_CODE=HOUSE123
HOUSE_PASSWORD=SecretPass
# Optional: Configure a group chat for ChoresSir to respond in (instead of DMs)
# When set, the bot will ONLY respond in this group and ignore personal messages
# Format: <group_id>@g.us (e.g., 120363400136168625@g.us)
# Leave empty to respond to DMs only (default behavior)
HOUSE_GROUP_CHAT_ID=

# AI Model Configuration (defaults to Claude 3.5 Sonnet)
MODEL_ID=anthropic/claude-3.5-sonnet

# Admin Notification Configuration
# Enable/disable admin notifications for critical errors
ENABLE_ADMIN_NOTIFICATIONS=true
# Cooldown period between notifications for the same error category (in minutes)
ADMIN_NOTIFICATION_COOLDOWN_MINUTES=60
